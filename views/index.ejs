<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Chat APP</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    body {
        background-color: #1a202c;
        color: #a0aec0;
    }
    .message-bubble {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }
    .message-bubble-sent {
        background: linear-gradient(135deg, #43cea2 0%, #185a9d 100%);
    }
</style>
</head>
<body class="bg-gray-900 text-gray-300 font-sans h-screen flex items-center justify-center">

  <div class="flex flex-col w-full max-w-2xl h-4/5 border border-gray-700 rounded-lg overflow-hidden shadow-lg">
    <div class="p-4 border-b border-gray-700 bg-gray-800">
        <h2 class="text-xl font-semibold text-white">Chat with Crishna</h2>
    </div>
    <div id="message" class="flex-1 p-4 overflow-y-auto space-y-4 bg-gray-900">
        <div class="flex items-start">
            <div class="message-bubble p-4 rounded-lg text-white max-w-xs">
                <p>Hello, how are you?</p>
            </div>
        </div>
    </div>
    <div class="p-4 border-t border-gray-700 bg-gray-800">
        <form class="flex items-center">
            <input type="text" id="input" autocomplete="off" class="flex-1 outline-none p-2 bg-gray-700 border border-gray-600 rounded-lg text-white" placeholder="Type a message...">
            <button type="button" id="btn" class="ml-2 bg-blue-500 text-white p-2 rounded-lg">Send</button>
        </form>
    </div>
</div>

<script src="/socket.io/socket.io.js"></script>
<script>
  const socket = io();
</script>
<script src="/js/script.js"></script>
</body>
</html>
